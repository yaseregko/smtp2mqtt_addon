{
  "name": "smtp2mqtt",
  "version": "0.3",
  "slug": "smtp2mqtt",
  "description": "This addon simulate an SMTP server (required by Yoosee/KONX doorbell) and public a message in MQTT everytime the doorbell rings.",
  "url": "https://github.com/yaseregko/smtp2mqtt_addon",
  "startup": "application",
  "init": false,
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "boot": "auto",
  "panel_icon": "mdi:mqtt",
  "map": [
    "config:rw",
    "media:rw"
  ],
  "ports": {
    "25/tcp": 25
  },
  "ports_description": {
    "25/tcp": "smtp tcp-listen port"
  },
  "options": {
    "device_id": "0",
    "media_path": "/media",
    "mqtt_url": "mqtt://core-mosquitto:1883",
    "mqtt_username": "username",
    "mqtt_password": "password"
  },
  "schema": {
    "device_id": "str?",
    "media_path": "str?",
    "mqtt_url": "str?",
    "mqtt_username": "str?",
    "mqtt_password": "str?"
  }
}
